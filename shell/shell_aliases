# Colors
alias ls='ls --color=auto'
alias grep='grep --color=auto'

# List directory contents
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Navigation
alias ..="cd .."
alias ...="cd ../.."

# Archive
alias untar='tar -xvzf'

# Arch Linux
if type pacman > /dev/null; then
  alias pacman='sudo pacman --color=auto'
fi
